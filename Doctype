    <h1>Descubra o preço dos produtos</h1><br><br>

    <label>Uva</label><input type="radio" name="fruta" id="uva" onclick="pesquisarPreco('uva')"><br>
    <label>Laranja<label><input type= "radio" name="fruta" id="Laranja" onclick="pesquisarPreco('laranja')"><br>
    <label>Pera</label><input type="radio" name="fruta" id="pera"onclick="pesquisarPreco('pera')"><br>

    <script type="text/javascript">
        const pesquisarPreco = function(opcao){
            switch(opcao){
                case 'laranja' :
                console.log('Preço da larana: R$1,70')
                alert('Preço da larana: R$1,70')
                break
                case 'pera':
                    console.log('Preço da pera: R$2,50')
                    alert('Preço da pera: R$2,50')
                    break
                case 'uva':
                    console.log('preço da uva: R$3,89')
                    alert('Preço da uva: R$3,89')
                    break
                    default:
                        console.log('Produto não existe')
                        break
            }
        }
    </script>
